@startuml

title "Class Diagram of JaPong Client"

package "Client" {
    package "User Input" {
        interface Transmitter {
            send()
        }

        class CommandBuffer {
            dict: CommandDict
            intervalID: number
            transmitter
            sendCommand()
        }

        CommandBuffer *-- Transmitter
        CommandBuffer *-- Command
        Enum Command {
            Idle
            Enter
            Left
            Right
        }
    }

    package Rendering {
        abstract "Drawable" as DrawableClient {
            width, height
            x, y
            type
            draw()
        }
        class Circle {}
        class Rect {}
        DrawableClient <|-- Circle
        DrawableClient <|-- Rect
        class DrawableBuffer {
            drawables
            draw()
        }
        DrawableBuffer . DrawableClient
    }
}

@enduml